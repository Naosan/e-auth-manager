# eBay OAuth Token Manager - Environment Configuration Example
# Copy this file to .env and update with your actual credentials

# eBay API Credentials (REQUIRED)
# Get these from https://developer.ebay.com/my/keys
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# Default App ID for token storage and retrieval
EBAY_DEFAULT_APP_ID=your_default_app_id

# eBay API Environment
EBAY_ENVIRONMENT=PRODUCTION
# EBAY_ENVIRONMENT=SANDBOX

# Security Configuration
# Generate a secure key: openssl rand -hex 32
EBAY_MASTER_KEY=your_secure_master_key_change_me_in_production

# Initial Refresh Token for First-Time Setup
# Get this manually through eBay OAuth browser flow
# This will be automatically used on first startup if provided
EBAY_INITIAL_REFRESH_TOKEN=your_manual_refresh_token_from_browser_oauth

# Centralized JSON (SSOT) Configuration
# Path to centralized JSON file for shared refresh token storage
OAUTH_SSOT_JSON=/var/secure/ebay/refresh-ssot.json
# Namespace for token organization (optional)
TOKEN_NAMESPACE=ebay-oauth

# Token Storage Strategy
EBAY_USE_DATABASE_TOKENS=true
EBAY_USE_LEGACY_TOKENS=false

# Database Configuration (when EBAY_USE_DATABASE_TOKENS=true)
EBAY_DATABASE_PATH=./database/ebay_tokens.sqlite

# File Storage Configuration (when EBAY_USE_LEGACY_TOKENS=true)
# Leave empty to use OS-specific default location
EBAY_TOKEN_FILE_PATH=

# Advanced Configuration (rarely needs to be changed)
EBAY_TOKEN_URL=https://api.ebay.com/identity/v1/oauth2/token
EBAY_SCOPE=https://api.ebay.com/oauth/api_scope